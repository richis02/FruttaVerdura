<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AllFruitVegOfListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_fruit_of_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_elimina"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mostra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_more_horiz_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/green_background"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_search_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fab_mostra"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/green_background"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/camera"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fab_cerca"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/green_background"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_rimuovi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_delete_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fab_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/green_background"/>

    <Button
        android:id="@+id/btn_elimina"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:text="Elimina"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_btn"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>