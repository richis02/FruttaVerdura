<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="7dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/ripple_effect_white"
    >

    <TextView
        android:id="@+id/list_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:fontFamily="@font/montserratmedium"
        android:text="@string/nth_list_name"
        android:textColor="@color/green_text_icons"
        android:layout_gravity="center_vertical"
        android:textSize="20sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/modify_list_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_edit_24"
        android:contentDescription="@string/contentDescription"
        android:tint="@color/green_background"/>

</LinearLayout>
